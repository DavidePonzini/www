---

const { pathname } = Astro.url;

const navItems = [
  { match: '/', label: 'Home', href: '/#navbar' },
  { match: '/utils/', label: 'Utilities', href: '/utils' },
  { match: '/portfolio/', label: 'Portfolio', href: '/portfolio' },
];

---

<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/#navbar">PonziDav</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbar">
      <div class="navbar-nav">
        {navItems.map((item) => (
          <a class={`nav-link ${pathname === item.match ? 'active' : ''}`} href={item.href}>
            {item.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>
