---
interface Props {
	title: string;
	href: string;
	img: string;
}

const { href, title, img } = Astro.props;
---

<a href={href} class="card">
	<img class="card-img-top" src={img}>
	<div class="card-body">
		<h5 class="card-title">{title}</h5>
		<p class="card-text">
			<slot>{title}</slot>
		</p>
		<span class="btn btn-primary">Open</span>
	</div>
</a>

<style>
	.card {
		display: inline-block;
		margin: 12px;
		word-wrap: normal;
		vertical-align: top;
		width: 18rem;
		color: black;
	}

	a.card {
		text-decoration: none;
	}

	.card .card-text {
		color: black;
		height: 80px;
		overflow-y: auto;
	}

	.card .card-img-top {
		object-fit: cover;
		height: 12rem;
	}
</style>